{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@models/*": ["src/modules/database/models/*"],
      "@schemas/*": ["src/modules/common/schemas/*"],
      "@utils/*": ["src/modules/common/utils/*"],
      "@enums/*": ["src/modules/common/enums/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false
  },
  "include": ["src"]
}
